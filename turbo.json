{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"globalEnv": ["DEV", "NODE_ENV", "CI_RELEASE"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"lint": {
			"dependsOn": ["^lint", "^build"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"release": {
			"dependsOn": ["^build"]
		},
		"test": {}
	}
}
